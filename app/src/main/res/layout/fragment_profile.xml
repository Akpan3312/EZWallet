<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileFragment"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="Proflie Image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Good Morning"
           android:textSize="16sp"
           android:textStyle="bold"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Zaire Philips"
           android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/balance_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/total_balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total balance:"
            android:textSize="20sp"
            android:textColor="#808080"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$32,879.00"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#000000"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/balance_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#CAF4D2"
        android:weightSum="3">

        <ImageView
            android:id="@+id/add_money"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hugeicons_money_receive_02"
            android:contentDescription="Add money"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/send_money"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hugeicons_money_send_02"
            android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/freeze_money"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mdi_freeze_advisory"
            android:contentDescription="Freeze money"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_again_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/actions_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send again"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user1_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>

            <ImageView
                android:id="@+id/user2_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>

            <ImageView
                android:id="@+id/user3_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>

            <ImageView
                android:id="@+id/user4_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>

            <ImageView
                android:id="@+id/user5_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>

            <ImageView
                android:id="@+id/user6_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src=""
                android:layout_marginEnd="8dp"
                android:contentDescription="User Icon"/>
        </LinearLayout>

    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>